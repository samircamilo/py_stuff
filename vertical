#function chaos
def chaos():
	return 'Eu quero ver o caos' 

#data input
word = input('Escreve qq coisa: \n')

#caos mode
if word == ('caos'):
		word = chaos()

#vertical mode
word = list(word)
for w in word:
	print(w)


input('\n\nDaora ou nem? Vai, dá <Enter> e some da minha frente, cão!')

